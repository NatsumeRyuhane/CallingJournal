# Application Configuration
APP_NAME=CallingJournal
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./calling_journal.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/calling_journal

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Phone Service Configuration
# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# File Storage
AUDIO_STORAGE_PATH=./data/audio
LOG_STORAGE_PATH=./data/logs
JOURNAL_STORAGE_PATH=./data/journals

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
